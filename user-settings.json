/// Place your settings in this file to overwrite the default settings
{
  "breadcrumbs.enabled": true,
  "debug.openDebug": "openOnDebugBreak",
  "debug.toolBarLocation": "docked",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.detectIndentation": false,
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "selection",
  "editor.rulers": [80, 130, 140],
  "editor.semanticTokenColorCustomizations": {
    "[Cobalt2]": {
      "enabled": true
    }
  },
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.visible": 8,
  "files.autoSave": "onFocusChange",
  "files.eol": "\n",
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.defaultDateFormat": "DD-MMM-YYYY HH:MM",
  "gitlens.mode.active": "zen",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "javascript.format.enable": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveshare.featureSet": "stable",
  "material-icon-theme.showWelcomeMessage": false,
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.autoClosingBrackets": "never",
    "editor.quickSuggestions": false
  },
  "prettier.trailingComma": "es5",
  "[python]": {},
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.fontFamily": "\"MesloLGS NF\"",
  "terminal.integrated.minimumContrastRatio": 4.5,
  "turboConsoleLog.addSemicolonInTheEnd": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.enableWindowsBackgroundUpdates": false,
  "workbench.activityBar.visible": true,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "workbench.colorCustomizations": {
    "terminal.ansiBrightWhite": "#ffffff"
  },
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.editor": "ui",
  "cSpell.ignorePaths": [
    "node_modules",
    "vscode-extension",
    ".vscode",
    ".git",
    "config",
    "**/*/settings.json",
    "tslint.json",
    ".eslintrc.json",
    "package.json"
  ],
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "jade",
    "javascript",
    "javascriptreact",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "python",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "vue",
    "yml"
  ],
  "python.testing.pytestEnabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "extensions.autoUpdate": true,
  "vsicons.dontShowNewVersionMessage": true,
  "[rust]": {
    "editor.tabSize": 4
  },
  "python.languageServer": "Pylance",
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "turboConsoleLog.includeFileNameAndLineNum": false,
  "turboConsoleLog.insertEnclosingClass": false,
  "turboConsoleLog.insertEnclosingFunction": false,
  "files.defaultLanguage": "markdown",
  "editor.suggest.showStatusBar": true,
  "prettier.singleQuote": true,
  "turboConsoleLog.quote": "'",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "wrap_attributes": "force-expand-multiline"
    },
    "prettyhtml": {
      "printWidth": 100,
      "singleQuote": false,
      "wrapAttributes": false,
      "sortAttributes": false
    }
  },
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 130,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "cSpell.userWords": ["Avenir", "Helvetica", "grayscale", "noopener"],
  //exludes fies & folders in search indexing
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
    "**/venv": true
  },
  //exludes fies & folders for watcher service
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/env/**": true,
    "**/venv/**": true,
    "env-*": true
  },
  "testExplorer.useNativeTesting": true,
  "editor.bracketPairColorization.enabled": true,
  "workbench.colorTheme": "Cobalt2",
  "settingsSync.ignoredSettings": ["workbench.colorTheme"],
  "javascript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterNames.enabled": "none",
  "settings.cycle": [
    {
      "id": "parameterNamesInlay",
      "overrideWorkspaceSettings": false,
      "values": [
        {
          "javascript.inlayHints.parameterNames.enabled": "all",
          "typescript.inlayHints.parameterNames.enabled": "all"
        },
        {
          "javascript.inlayHints.parameterNames.enabled": "none",
          "typescript.inlayHints.parameterNames.enabled": "none"
        }
      ]
    }
  ],
  "vscode-edge-devtools.mirrorEdits": true,
  "python.defaultInterpreterPath": "/usr/bin/python3"
}
